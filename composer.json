{
  "name": "japandoudou/chatgptbundle",
  "type": "symfony-bundle",
  "description": "Bundle for ChatGPT bot integration",
  "authors": [
    {
      "name": "LoicGeny",
      "email": "loic.geny@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.2",
    "symfony/framework-bundle": "^6.3",
    "doctrine/doctrine-bundle": "^2.10",
    "symfony/config": "^6.3",
    "symfony/translation": "^6.3",
    "symfony/dependency-injection": "^6.3",
    "doctrine/orm": "^2.12",
    "doctrine/dbal": "^3.6",
    "openai-php/client": "^0.7.3",
    "symfony/http-client": "^6.3",
    "nyholm/psr7": "^1.8"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpro/grumphp": "^1.3",
    "phpstan/phpstan": "^1",
    "phpstan/phpstan-doctrine": "^1",
    "phpstan/phpstan-symfony": "^1"
  },
  "autoload": {
    "psr-4": {
      "JapanDoudou\\ChatGptBundle\\": ""
    }
  },
  "config": {
    "allow-plugins": {
      "phpro/grumphp": true,
      "php-http/discovery": true
    }
  }
}
